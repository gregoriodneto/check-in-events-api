{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"]
}